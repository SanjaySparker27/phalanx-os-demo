<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="ugv_rover">
    <static>false</static>
    
    <link name="chassis">
      <pose>0 0 0.2 0 0 0</pose>
      <inertial>
        <mass>20</mass>
        <inertia>
          <ixx>0.834</ixx>
          <iyy>1.667</iyy>
          <izz>2.5</izz>
        </inertia>
      </inertial>
      
      <visual name="chassis_visual">
        <geometry>
          <box>
            <size>1.0 0.6 0.3</size>
          </box>
        </geometry>
        <material>
          <ambient>0.3 0.5 0.3 1</ambient>
          <diffuse>0.3 0.5 0.3 1</diffuse>
        </material>
      </visual>
      
      <collision name="chassis_collision">
        <geometry>
          <box>
            <size>1.0 0.6 0.3</size>
          </box>
        </geometry>
      </collision>
      
      <!-- IMU -->
      <sensor name="imu_sensor" type="imu">
        <always_on>true</always_on>
        <update_rate>100</update_rate>
        <plugin filename="libgazebo_ros_imu_sensor.so" name="imu_plugin">
          <robotNamespace>/ugv</robotNamespace>
          <topicName>imu/data</topicName>
        </plugin>
      </sensor>
      
      <!-- GPS -->
      <sensor name="gps" type="gps">
        <always_on>true</always_on>
        <update_rate>10</update_rate>
        <plugin filename="libgazebo_ros_gps_sensor.so" name="gps_plugin">
          <robotNamespace>/ugv</robotNamespace>
          <topicName>gps/fix</topicName>
        </plugin>
      </sensor>
      
      <!-- 2D Lidar -->
      <sensor name="lidar_2d" type="ray">
        <pose>0.5 0 0.1 0 0 0</pose>
        <ray>
          <scan>
            <horizontal>
              <samples>720</samples>
              <resolution>1</resolution>
              <min_angle>-3.14159</min_angle>
              <max_angle>3.14159</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.15</min>
            <max>30</max>
            <resolution>0.01</resolution>
          </range>
        </ray>
        <always_on>true</always_on>
        <update_rate>20</update_rate>
        <plugin filename="libgazebo_ros_laser.so" name="lidar_plugin">
          <robotNamespace>/ugv</robotNamespace>
          <topicName>scan</topicName>
          <frameName>laser_link</frameName>
        </plugin>
      </sensor>
      
      <!-- RGB-D Camera -->
      <sensor name="rgbd_camera" type="depth">
        <pose>0.4 0 0.2 0 0 0</pose>
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
          </image>
          <clip>
            <near>0.1</near>
            <far>10</far>
          </clip>
        </camera>
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <plugin filename="libgazebo_ros_open_kinect.so" name="kinect_plugin">
          <robotNamespace>/ugv</robotNamespace>
          <cameraName>rgbd</cameraName>
          <imageTopicName>color/image_raw</imageTopicName>
          <depthImageTopicName>depth/image_raw</depthImageTopicName>
          <pointCloudTopicName>depth/color/points</pointCloudTopicName>
          <frameName>camera_link</frameName>
        </plugin>
      </sensor>
      
      <!-- Bumper sensors -->
      <sensor name="front_bumper" type="contact">
        <pose>0.5 0 0 0 0 0</pose>
        <contact>
          <collision>chassis_collision</collision>
        </contact>
        <plugin filename="libgazebo_ros_bumper.so" name="bumper_plugin">
          <robotNamespace>/ugv</robotNamespace>
          <topicName>bumper/front</topicName>
        </plugin>
      </sensor>
    </link>
    
    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
      <pose>0.35 0.35 0.1 0 0 0</pose>
      <inertial>
        <mass>2</mass>
        <inertia>
          <ixx>0.004</ixx>
          <iyy>0.004</iyy>
          <izz>0.008</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>
    <joint name="front_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
    
    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
      <pose>0.35 -0.35 0.1 0 0 0</pose>
      <inertial>
        <mass>2</mass>
        <inertia>
          <ixx>0.004</ixx>
          <iyy>0.004</iyy>
          <izz>0.008</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>1.0</mu>
              <mu2>1.0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>
    <joint name="front_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
    
    <!-- Rear Left Wheel -->
    <link name="rear_left_wheel">
      <pose>-0.35 0.35 0.1 0 0 0</pose>
      <inertial>
        <mass>2</mass>
        <inertia>
          <ixx>0.004</ixx>
          <iyy>0.004</iyy>
          <izz>0.008</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>
    </link>
    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_left_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
    
    <!-- Rear Right Wheel -->
    <link name="rear_right_wheel">
      <pose>-0.35 -0.35 0.1 0 0 0</pose>
      <inertial>
        <mass>2</mass>
        <inertia>
          <ixx>0.004</ixx>
          <iyy>0.004</iyy>
          <izz>0.008</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
        <material>
          <ambient>0.1 0.1 0.1 1</ambient>
        </material>
      </visual>
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>0.1</length>
          </cylinder>
        </geometry>
      </collision>
    </link>
    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_right_wheel</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>
    
    <!-- ROS2 Control Plugin -->
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>$(find test_simulation)/config/ugv_controllers.yaml</parameters>
    </plugin>
  </model>
</sdf>
