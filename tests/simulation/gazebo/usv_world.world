<?xml version="1.0"?>
<sdf version="1.6">
  <world name="usv_world">
    <!-- Physics for water simulation -->
    <physics name="default_physics" default="true" type="ode">
      <real_time_update_rate>1000</real_time_update_rate>
      <max_step_size>0.001</max_step_size>
      <real_time_factor>1.0</real_time_factor>
      <ode>
        <solver>
          <type>quick</type>
          <iters>50</iters>
          <sor>1.3</sor>
        </solver>
      </ode>
    </physics>

    <scene>
      <ambient>0.4 0.4 0.4 1</ambient>
      <background>0.529 0.808 0.922 1</background>
      <shadows>true</shadows>
      <fog>
        <color>0.529 0.808 0.922 1</color>
        <type>linear</type>
        <start>50</start>
        <end>200</end>
        <density>0.01</density>
      </fog>
    </scene>

    <!-- Water Surface -->
    <model name="water_surface">
      <static>true</static>
      <pose>0 0 0 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box>
              <size>500 500 0.1</size>
            </box>
          </geometry>
          <material>
            <ambient>0.0 0.4 0.7 0.7</ambient>
            <diffuse>0.0 0.4 0.7 0.7</diffuse>
            <specular>0.5 0.5 0.5 1</specular>
            <emissive>0 0 0 1</emissive>
          </material>
        </visual>
      </link>
    </model>

    <!-- Buoys -->
    <model name="buoy_1">
      <static>true</static>
      <pose>20 10 0 0 0 0</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <sphere>
              <radius>0.5</radius>
            </sphere>
          </geometry>
        </collision>
        <visual name="visual">
          <geometry>
            <sphere>
              <radius>0.5</radius>
            </sphere>
          </geometry>
          <material>
            <ambient>1 0.5 0 1</ambient>
            <diffuse>1 0.5 0 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Docking Station -->
    <model name="docking_station">
      <static>true</static>
      <pose>0 0 0 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box>
              <size>5 3 1</size>
            </box>
          </geometry>
          <material>
            <ambient>0.5 0.35 0.2 1</ambient>
            <diffuse>0.5 0.35 0.2 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Wave Plugin -->
    <plugin name="wave_plugin" filename="libgazebo_ros_wave.so">
      <wave_topic>/world/usv_world/waves</wave_topic>
      <wave_amplitude>0.5</wave_amplitude>
      <wave_period>5.0</wave_period>
      <wave_direction>1 0 0</wave_direction>
    </plugin>

    <!-- Current Plugin -->
    <plugin name="current_plugin" filename="libgazebo_ros_current.so">
      <current_topic>/world/usv_world/current</current_topic>
      <current_velocity_mean>0.5</current_velocity_mean>
      <current_velocity_variance>0.1</current_velocity_variance>
      <current_direction_mean>0.0</current_direction_mean>
    </plugin>
  </world>
</sdf>